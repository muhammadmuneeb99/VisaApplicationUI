@page
@model IndexModel
@{
	ViewData["Title"] = "Login Page";
}

<div class="container">
	<form method="post">
		<div class="row">
			<div class="col-25">
				<label for="email">Email</label>
			</div>
			<div class="col-75">
				<input type="email" id="email" name="email" placeholder="Your email.." required>
			</div>
		</div>
		<div class="row">
			<div class="col-25">
				<label for="password">Password</label>
			</div>
			<div class="col-75">
				<input type="password" id="password" name="password" placeholder="Your password.." required>
			</div>
		</div>
		<div class="row">
			<input type="submit" value="Submit" style="margin-top:10px;">
		</div>
		<div class="row">
			<a href=" https://localhost:7014/Register"><input type="button" value="New User - Register" style="margin-top:10px;"></a>
		</div>
	</form>
</div>